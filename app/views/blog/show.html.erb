<p id="notice"><%= notice %></p>
<section class="entry_form">
<article>
<p><b>title:</b><%= @entry.title %></p>
<p><b>content:</b><%= @entry.body %></p>
</article>
</section>
<section class="comment_form" id="comment_form_div">
<%= render @entry.comments.build %>
</section>
<section  class="comment" id="comment_list">
<% @entry.comments.each do |comment| %>
  <% if comment.body != nil %>
    <p><%= comment.body %> by <%= comment.name %></p>
  <% end %>
<% end %>
</section>
